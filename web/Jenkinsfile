pipeline {
    agent any
    tools {
    maven 'mvncfg'
    }

    stages {
        stage ('Compile Stage') {

            steps {
                    
                    dir("/root/opt/web") {

                    sh 'mvn compile'
                }
            }
        }

        stage ('Package Stage') {

            steps {
                    sh 'cd /opt/web'
                    sh 'mvn package'
                
            }
        }


        
    }
}
